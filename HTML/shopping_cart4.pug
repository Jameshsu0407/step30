doctype html
html(lang="zh-tw")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		title 4 交易完成
		//- 匯入css
		include head.pug
	body#top
		//- 匯入go_to_top
		include go_to_top.pug
		//- 匯入navbar
		include navbar.pug
		// intro_top_cover
		section
			.jumbotron.intro_top_cover.mb-0(style="background-image: url(../assets/img/card_info_top_cover.png);" data-aos="fade-up" data-aos-duration="1200" data-aos-once="true")
				.container
					.text
						h1 購物車
		// progress_bar
		section
			.container
				.progress_bar.my-5
					ul
						li
							.wrap
							h5 1 捐款明細
						li
							.wrap
							h5 2 填寫捐款人資料
						li
							.wrap
							h5 3 選擇/確認捐款方式
						li.active
							.wrap
							h5 4 交易完成
		// form
		section
			.container
				form
					// 訂單資訊
					.order_info.my-4
						strong.d-block.text-center.text-danger 交易完成
						.text_info.d-block.text-success.text-md 交易編號：abc1234567890
						.text_info.d-block.text-success.text-md 交易時間：2020/11/11 11:11:11
					// 轉帳、劃撥
					.transfer_info.my-4
						strong.d-block.text-center.text-danger 匯款帳號
						// 銀行
						.text_info.d-block.text-secondary.text-md 銀行：玉山銀行 新板特區分行
						.text_info.d-block.text-secondary.text-md 銀行代號：808
						.text_info.d-block.text-secondary.text-md 戶名：舊鞋救命國際基督關懷協會
						.text_info.d-block.text-secondary.text-md 帳號：0587-940-010786
						// 郵局劃撥
						.text_info.d-block.text-secondary.text-md 戶名：社團法人舊鞋救命國際基督關懷協會
						.text_info.d-block.text-secondary.text-md 帳號： 50344838
					label.form_title
						i.fas.fa-heart
						| 單筆捐款
					table.table.table-striped.mb-5
						thead
							tr.text-center
								th.text-left(scope="col" style="width: 25%") 募資專案
								th.text-left(scope="col" style="width: 45%") 募資項目
								th.text-center(scope="col" style="width: 15%") 捐款方式
								th.text-center(scope="col" style="width: 15%") 捐款金額
						tbody
							- for ( var i=1 ; i<=4 ; i++)
								tr.text-center
									td.text-left(data-th="募資專案") 2020活水計畫
									td.text-left(data-th="募資項目") NT500 ->幫助一名非洲孩子有乾淨的水喝
									td(data-th="捐款方式") 單次捐款
									td(data-th="捐款金額") 1000
							tr.text-center
									td.text-left(data-th="募資專案") 2020活水計畫
									td.text-left(data-th="募資項目") NaN
									td(data-th="捐款方式") 單次捐款
									td(data-th="捐款金額") 1000
					label.form_title
						i.fas.fa-heart
						| 定期定額
					table.table.table-striped
						thead
							tr.text-center
								th.text-left(scope="col" style="width: 25%") 募資專案
								th.text-left(scope="col" style="width: 45%") 募資項目
								th.text-center(scope="col" style="width: 15%") 捐款方式
								th.text-center(scope="col" style="width: 15%") 捐款金額
						tbody
							- for ( var i=1 ; i<=3 ; i++)
								tr.text-center
									td.text-left(data-th="募資專案") 2020活水計畫
									td.text-left(data-th="募資項目") NT500 ->幫助一名非洲孩子有乾淨的水喝
									td(data-th="捐款方式") 定期定額
									td(data-th="捐款金額") 1000
							tr.text-center
									td.text-left(data-th="募資專案") 2020活水計畫
									td.text-left(data-th="募資項目") NaN
									td(data-th="捐款方式") 單次捐款
									td(data-th="捐款金額") 1000
					.sum_cost.p-2.mb-5
						h6.text-right.text-white.m-0 總金額：7000元
					.page_link.d-flex.flex-wrap.justify-content-center.align-items-center
						a.btn.btn-md.page_go_to.m-1.text-white(href="index.html") 回首頁
		//- 匯入footer
		include footer.pug
		//- 匯入script
		include script.pug
		
